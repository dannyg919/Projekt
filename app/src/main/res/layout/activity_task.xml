<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TaskActivity">

    <TextView
        android:id="@+id/tvTaskName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="23dp"
        android:layout_marginTop="35dp"
        android:textSize="28sp"
        android:textStyle="bold"
        tools:text="Flixster" />

    <TextView
        android:id="@+id/tvActivity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvTaskName"
        android:layout_alignParentStart="true"
        android:layout_marginStart="25dp"
        android:layout_marginTop="22dp"
        android:text="Activity"
        android:textSize="20sp"
        android:textStyle="bold" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvTaskActivity"
        android:layout_width="356dp"
        android:layout_height="234dp"
        android:layout_below="@+id/tvActivity"
        android:layout_alignParentStart="true"
        android:layout_marginStart="26dp"
        android:layout_marginTop="3dp" />

    <Button
        android:id="@+id/btnLogTime"
        android:layout_width="229dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rvTaskActivity"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="56dp"
        android:text="Log Time" />

    <Button
        android:id="@+id/btnConcentration"
        android:layout_width="233dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnLogTime"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="18dp"
        android:text="Concentration Mode" />
</RelativeLayout>